<?xml version="1.0"?>
<object name="portal_controlpanel"
        xmlns:i18n="http://xml.zope.org/namespaces/i18n"
        i18n:domain="c2.pas.aal2">

  <configlet
      title="Manage Passkeys"
      action_id="passkey-manage"
      appId="c2.pas.aal2"
      category="UsersAndSecurity"
      condition_expr="not:portal/portal_membership/isAnonymousUser"
      icon_expr="string:${portal_url}/++resource++plone-icon-users.svg"
      url_expr="string:${portal_url}/@@passkey-manage"
      visible="True"
      i18n:attributes="title">
    <permission>View</permission>
  </configlet>

  <!-- AAL2 Admin Protection Settings (Feature 006: US2) -->
  <configlet
      title="AAL2 Admin Protection"
      action_id="aal2-admin-protection"
      appId="c2.pas.aal2"
      category="Security"
      condition_expr=""
      icon_expr="string:${portal_url}/++resource++plone-icon-security.svg"
      url_expr="string:${portal_url}/@@aal2-admin-protection-settings"
      visible="True"
      i18n:attributes="title">
    <permission>Manage portal</permission>
  </configlet>

</object>
